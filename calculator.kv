<CalButton@Button>:
    font_size:32
    foreground_color: (1, 1, 1, 1)    
<CalGridlayout>:
    id : calculator
    display:entry
    rows:10
    padding:10
    spacing:1


    BoxLayout:
        TextInput:
            id:entry
            font_size:32
            multiline:False
            foreground_color: (1, 1, 1, 1)
            background_color:(0,0,0,0)
            border:1,1,1,1
            input_type:'number'
            input_filter:'int'
            focus:True
    BoxLayout:
        spacing:1
        CalButton:
            text:"7"
            on_press:entry.text += self.text
        CalButton:
            text:"8"
            on_press:entry.text +=self.text
        CalButton:
            text:"9"
            on_press:entry.text +=self.text
        CalButton:
            text:"+"
            on_press:entry.text +=self.text
    BoxLayout:
        spacing:1
        CalButton:
            text:"4"
            on_press:entry.text +=self.text
        CalButton:
            text:"5"
            on_press:entry.text +=self.text
        CalButton:
            text:"6"
            on_press:entry.text +=self.text
        CalButton:
            text:"-"
            on_press:entry.text +=self.text
    BoxLayout:
        spacing:1
        CalButton:
            text:"1"
            on_press:entry.text +=self.text
        CalButton:
            text:"2"
            on_press:entry.text +=self.text
        CalButton:
            text:"3"
            on_press:entry.text +=self.text
        CalButton:
            text:"*"
            on_press:entry.text +=self.text
    BoxLayout:
        spacing:1
        CalButton:
            text:"AC"
            on_press: entry.text =""
        CalButton:
            text:"0"
            on_press:entry.text +=self.text
        CalButton:
            text:"."
            on_press:entry.text +=self.text
        CalButton:
            text:"/"
            on_press:entry.text +=self.text
    BoxLayout:
        spacing:1
        CalButton:
            text:'='
            on_press:calculator.calculate(entry.text)